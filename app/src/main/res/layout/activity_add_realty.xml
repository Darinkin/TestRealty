<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_realty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.darina.testrealty.AddRealtyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Адрес:"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:cursorVisible="false"
        android:focusable="false"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:textSize="14sp"
        android:cursorVisible="true"
        tools:maxLength="100"
        android:hint="введите адрес сюда"
        android:maxLength="100"
        android:textColor="@android:color/background_dark" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText6"
        android:cursorVisible="true"
        android:layout_alignBaseline="@+id/editText5"
        android:layout_alignBottom="@+id/editText5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="149dp"
        tools:numeric="integer"
        tools:maxLength="3"
        android:hint="площадь"
        android:maxLength="3"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText14"
        android:cursorVisible="true"
        tools:numeric="integer"
        android:layout_below="@+id/editText9"
        android:layout_alignStart="@+id/editText10"
        tools:maxLength="2"
        android:hint="этаж"
        android:maxLength="2"
        android:textColor="@android:color/background_dark" />

    <Button
        android:text="Добавить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/button2"
        android:layout_below="@+id/editText14"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цена, руб:"
        android:ems="10"
        android:layout_alignBaseline="@+id/editText8"
        android:id="@+id/editText7"
        android:focusable="false"
        android:layout_below="@+id/editText6"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText8"
        android:cursorVisible="true"
        android:hint="цена"
        android:maxLength="8"
        android:layout_below="@+id/editText5"
        android:layout_alignStart="@+id/editText6"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Этаж:"
        android:ems="10"
        android:id="@+id/editText13"
        android:cursorVisible="false"
        android:focusable="false"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/editText14"
        android:layout_alignBottom="@+id/editText14"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Площадь, м2:"
        android:ems="10"
        android:layout_marginTop="43dp"
        android:id="@+id/editText5"
        android:cursorVisible="false"
        android:focusable="false"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Комнат:"
        android:ems="10"
        android:id="@+id/editText9"
        android:cursorVisible="false"
        android:focusable="false"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/editText10"
        android:layout_alignBottom="@+id/editText10"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText10"
        android:cursorVisible="true"
        tools:numeric="integer"
        android:maxLength="1"
        android:hint="кол-во комнат"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/editText8"
        android:layout_alignStart="@+id/editText8" />

</RelativeLayout>
